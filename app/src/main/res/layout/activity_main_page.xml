<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="atam.buddygarage.MainPage">


    <TextView
        android:id="@+id/textView_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:fontFamily="sans-serif"
        android:text="Welcome, Do you want to create a Sale Event or search for a sale event?"
        android:textSize="24sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/textView_welcome"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button_sell"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:onClick="runSellFunc"
        android:text="Sell"
        android:textSize="36sp"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@android:color/holo_orange_dark" />

    <Button
        android:id="@+id/button_Buy"
        android:layout_width="155dp"
        android:layout_height="100dp"
        android:elevation="0dp"
        android:onClick="runBuyFunc"
        android:text="Buy"
        android:textSize="36sp"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:textColor="@android:color/holo_green_light"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/button_sell"
        android:layout_toEndOf="@+id/button_sell" />


</RelativeLayout>
